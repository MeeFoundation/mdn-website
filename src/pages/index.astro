---
import Layout from "@layouts/Layout.astro";
import { Header, Footer } from "mee-components";
import { header, footer } from "../config";
import streamlinedExperience from "../../public/images/streamlined-experience.png";
import streamlinedExperienceDark from "../../public/images/streamlined-experience-dark.png";
import yourRightsProtected from "../../public/images/your-rights-protected.png";
import yourRightsProtectedDark from "../../public/images/your-rights-protected-dark.png";
import controlYourData from "../../public/images/control-your-data.png";
import controlYourDataDark from "../../public/images/control-your-data-dark.png";
import yourActivities from "../../public/images/your-activities.png";
import yourActivitiesDark from "../../public/images/your-activities-dark.png";
import smartwallet from "../../public/images/smartwallet.png";
import smartwalletDark from "../../public/images/smartwallet-dark.png";
import identityAgent from "../../public/images/identity-agent.png";
import identityAgentDark from "../../public/images/identity-agent-dark.png";

const futures = [
  {
    image: streamlinedExperience,
    imageDark: streamlinedExperienceDark,
    title: "Smoother, more streamlined experience",
    description:
      "Less typing and tedium - forms are automatically filled using data from Mee-compatible apps/sites.",
    class: "col-span-6",
  },
  {
    image: yourActivities,
    imageDark: yourActivitiesDark,
    title: "Your activities are private–no more surveillance",
    description:
      "Your data is never shared/sold with/to any other company (including data brokers).",
    class: "col-span-6",
  },
  {
    image: controlYourData,
    imageDark: controlYourDataDark,
    title: "Control your data",
    description:
      "You can exercise your legal right to control (access, edit, erase, or move) your own data wherever it is stored.",
    class: "col-span-5",
  },
  {
    image: yourRightsProtected,
    imageDark: yourRightsProtectedDark,
    title: "Your rights are protected",
    description:
      "The Mee Foundation acting on the user’s behalf - MDN License limits the collection, processing, and transfer of personal data to what is reasonably necessary and proportionate.",
    class: "col-span-7",
  },
];
const identityAgentApps = [
  {
    image: identityAgent,
    imageDark: identityAgentDark,
    link: "https://itsmee.org/",
    linkTitle: "Sign up",
    imageClassName: "pr-6 md:pr-0",
    title: "Mee web app",
    className: "md:flex-row",
    description:
      "On the Mee website, you can see your list of connections. Each connection represents your relationship with a Mee-compatible app or site. The website allows you to control sharing of information held by one app/site with another one. You can see the kinds of information held in each connection, you can edit some of this information, and you can choose to delete the connection and thereby delete the data held by the app/site. The Mee website acts as a “remote control” for your personal data.",
  },
  {
    image: smartwallet,
    imageDark: smartwalletDark,
    link: "https://smartwallet.mee.foundation/",
    linkTitle: "Get the Smartwallet",
    title: "Mee Smartwallet",
    className: "md:flex-row-reverse",
    description:
      "As an optional part of the Mee Experience, we are developing a free Mee Smartwallet app for iOS and Android (support for desktop platforms is planned). This app stores your personal data on your device(s). Similar to the Mee website, it organizes this information into a set of connections. You can see this list of connections, review the personal data involved in each, and in the case of a connection to a Mee Data Network (MDN)-compatible app/site, you can edit this data and/or delete the connection, thereby deleting your data from the app/site",
  },
];
---

<Layout title="Mee Data Network">
  <Header header={header} location="Mee Data Network" />
  <main class="w-screen overflow-hidden">
    <article
      class="relative mt-27 flex h-full w-screen flex-col items-center justify-between gap-8 overflow-hidden md:gap-16"
    >
      <section
        class="section top-0 z-100 mt-10 flex h-full w-screen items-center justify-center md:mt-20"
      >
        <div
          class="flex max-w-5xl flex-col items-center justify-center gap-4 px-6 transition-opacity duration-500"
        >
          <h1
            class="marker text-center text-4xl font-semibold text-grey-900 lg:text-7xl dark:text-grey-50"
          >
            Mee Data Network
          </h1>

          <h3
            class="text text-pretty px-6 text-center text-xl text-grey-900 md:text-2xl dark:text-grey-300"
          >
            Puts you in control of your personal data wherever it lives. Once
            collected by an app/site, it can’t be shared with another app/site
            without your consent. Your data is yours to use as you wish.
          </h3>
          <a
            class="block w-full px-6 text-center text-xl leading-relaxed text-brand-600 underline md:text-2xl dark:text-brand-300"
            href="/docs"
          >
            MDN Docs <i class="bi bi-arrow-right"></i>
          </a>
        </div>
      </section>
      <section
        class="flex h-auto max-w-7xl flex-col items-center justify-center px-6 pb-20"
      >
        <div
          class="flex max-w-96 flex-wrap items-center justify-center gap-8 md:grid md:max-w-max md:grid-cols-12"
        >
          {
            futures.map((future) => (
              <div
                class:list={[
                  "h-full rounded-2xl border border-grey-300 dark:border-grey-600",
                  future.class,
                ]}
              >
                <img
                  src={future.image.src}
                  class="w-full dark:hidden"
                  alt={`${future.title}`}
                />
                <img
                  src={future.imageDark.src}
                  class="hidden w-full dark:block"
                  alt={`${future.title}`}
                />
                <div class="flex flex-col gap-2 p-8 pt-0">
                  <div class="flex items-center gap-2 text-left text-xl font-semibold text-grey-900 lg:text-2xl dark:text-grey-50">
                    {future.title}
                  </div>
                  <div class="text-sm text-grey-800 lg:text-base dark:text-grey-300">
                    {future.description}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>
      <section
        class="section top-0 z-100 mt-10 flex h-full w-screen items-center justify-center md:mt-20"
      >
        <div
          class="flex max-w-3xl flex-col items-center justify-center gap-4 px-6 transition-opacity duration-500"
        >
          <h2
            class="marker text-center text-3xl font-semibold text-grey-900 lg:text-5xl dark:text-grey-50"
          >
            End-user tools
          </h2>

          <h3
            class="text text-pretty px-6 text-center text-xl text-grey-900 md:text-2xl dark:text-grey-300"
          >
            Use the Mee website to control any Mee-compatible app or site.
            Install our mobile app to maintain a local copy of your data.
          </h3>
        </div>
      </section>
      <section
        class="flex h-auto max-w-7xl flex-col items-center justify-center px-6 pb-20"
      >
        <div class="flex w-full flex-col items-center justify-center gap-8">
          {
            identityAgentApps.map((app) => (
              <a
                href={app.link}
                class:list={[
                  "flex flex-col items-center gap-2 rounded-2xl border border-grey-300 transition-all hover:border-brand-300 hover:shadow-3-strong dark:border-grey-600 dark:hover:bg-dark-hover-gradient",
                  app.className,
                ]}
              >
                <img
                  src={app.image.src}
                  class:list={[
                    "h-auto max-h-120 w-auto rounded-2xl dark:hidden",
                    app.imageClassName,
                  ]}
                  alt={`${app.title}`}
                />
                <img
                  src={app.imageDark.src}
                  class:list={[
                    "hidden h-auto max-h-120 w-auto rounded-2xl dark:block",
                    app.imageClassName,
                  ]}
                  alt={`${app.title}`}
                />
                <div class="flex flex-col gap-6 p-8">
                  <div class="flex flex-col gap-2">
                    <div class="flex items-center gap-2 text-left text-xl font-semibold text-grey-900 lg:text-2xl dark:text-grey-50">
                      {app.title}
                    </div>
                    <div class="text-sm text-grey-800 lg:text-base dark:text-grey-300">
                      {app.description}
                    </div>
                  </div>
                  <div class="flex w-full gap-2 text-left text-base leading-relaxed text-brand-600 underline dark:text-brand-300">
                    {app.linkTitle} <i class="bi bi-arrow-right" />
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </section>
      <Footer footer={footer} mode="dark" />
    </article>
  </main>
</Layout>
